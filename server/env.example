# Backend Environment Variables

# Database
DATABASE_URL="file:./dev.db"

# OpenAI
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_PROJECT_ID=proj-your-project-id (optional)
OPENAI_MODEL_CHAT=gpt-4o-mini

# Authentication
AUTH_JWT_SECRET=your-super-secret-jwt-key-change-in-production
AUTH_TOKEN_EXPIRY=30d

# Server Configuration
PORT=4000
NODE_ENV=development
LOCAL_NETWORK_IP=auto

# Test Mode (for development without valid OpenAI key)
ENABLE_TEST_MODE=true

# Sentry (Error Tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Optional: Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100









